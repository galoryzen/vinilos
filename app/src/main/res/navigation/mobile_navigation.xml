<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.vinilos.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_album"
        android:name="com.example.vinilos.ui.album.AlbumFragment"
        android:label="@string/title_dashboard" tools:layout="@layout/fragment_album" >
        <action
            android:id="@+id/action_list_to_detail"
            app:destination="@id/navigation_album_detail"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/navigation_album_detail"
        android:name="com.example.vinilos.ui.albumdetail.AlbumDetailFragment" android:label="{albumNameArg}" tools:layout="@layout/fragment_album_detail">
        <argument
            android:name="albumIdArg"
            app:argType="integer" />
        <argument
            android:name="albumNameArg"
            app:argType="string"
            android:defaultValue="Detalle Álbum" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.vinilos.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

</navigation>